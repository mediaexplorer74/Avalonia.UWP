<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="AvaloniaApp.MinimalWindow"
        Width="500" Height="350" Title="Avalonia-UWP Bridge Test">
    <Grid Background="LightGray">
        <Canvas>
            <!-- Red Rectangle -->
            <Rectangle Canvas.Left="30" Canvas.Top="30" Width="120" Height="60" Fill="Red" Stroke="Black" StrokeThickness="2"/>
            <!-- Blue Ellipse -->
            <Ellipse Canvas.Left="200" Canvas.Top="30" Width="100" Height="60" Fill="Blue" Stroke="Black" StrokeThickness="2"/>
            <!-- Green Line -->
            <Line StartPoint="50,120" EndPoint="220,180" Stroke="Green" StrokeThickness="4"/>
            <!-- Counter Button and Text -->
            <StackPanel Canvas.Left="60" Canvas.Top="200" Orientation="Horizontal" Spacing="8">
                <Button x:Name="CounterButton" Width="100" Height="32" Content="Increment"/>
                <TextBlock x:Name="CounterText" Text="Count: 0" FontSize="18" VerticalAlignment="Center"/>
            </StackPanel>
        </Canvas>
    </Grid>
</Window>
